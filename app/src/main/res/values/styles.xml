    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColorHint">@color/grey</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="hintTextAppearance">@style/Text.Hint</item>
        <item name="boxStrokeColor">@color/grey</item>
        <item name="hintEnabled">true</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/grey</item>
        <item name="endIconDrawable">@drawable/ic_cross</item>
        <item name="colorOnSurface">@color/grey</item>
        <item name="colorPrimary">@color/grey</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>


    <style name="TextInputStyleNew" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="boxStrokeColor">@color/grey</item>
        <item name="errorTextColor">@color/red</item>
