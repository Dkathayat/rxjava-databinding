<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.yewapp.ui.modules.brandmodel.vm.ItemBrandLisViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8">

        <TextView
            android:id="@+id/tv_brand_label"
            style="@style/Text.Roboto.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dimen_10"
            android:text="@string/brand_model"
            android:textColor="@color/color_90"
            android:textSize="@dimen/text_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_label"
            style="@style/Text.Roboto.Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dimen_10"
            android:text="gsdgagvdghasvhjSDFVJD"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            app:drawableTint="@color/color_90"
            app:layout_constraintEnd_toStartOf="@+id/cross_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_label" />

        <ImageView
            android:id="@+id/cross_icon"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_20"
            android:src="@drawable/ic_cross"
            app:layout_constraintBottom_toBottomOf="@+id/tv_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_label"
            app:layout_constraintTop_toTopOf="@+id/tv_label" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dimen_12"
            android:background="@color/grey_ef"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
